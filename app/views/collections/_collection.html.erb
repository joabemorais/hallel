<div id="<%= dom_id collection %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= collection.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Abbreviation:</strong>
    <%= collection.abbreviation %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Edition:</strong>
    <%= collection.edition %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Collection type:</strong>
    <%= collection.collection_type %>
  </div>
</div>
