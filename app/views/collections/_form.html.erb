<%= form_with(model: collection, class: "contents") do |form| %>
  <% if collection.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(collection.errors.count, "error") %> prohibited this collection from being saved:</h2>

      <ul class="list-disc ml-6">
        <% collection.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": collection.errors[:name].none?, "border-red-400 focus:outline-red-600": collection.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :abbreviation %>
    <%= form.text_field :abbreviation, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": collection.errors[:abbreviation].none?, "border-red-400 focus:outline-red-600": collection.errors[:abbreviation].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :edition %>
    <%= form.text_field :edition, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": collection.errors[:edition].none?, "border-red-400 focus:outline-red-600": collection.errors[:edition].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :collection_type %>
    <%= form.text_field :collection_type, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": collection.errors[:collection_type].none?, "border-red-400 focus:outline-red-600": collection.errors[:collection_type].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
