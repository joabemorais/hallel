<%= form_with(model: worship_service, class: "contents") do |form| %>
  <% if worship_service.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(worship_service.errors.count, "error") %> prohibited this worship_service from being saved:</h2>

      <ul class="list-disc ml-6">
        <% worship_service.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :date %>
    <%= form.date_field :date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": worship_service.errors[:date].none?, "border-red-400 focus:outline-red-600": worship_service.errors[:date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :occasion_id %>
    <%= form.text_field :occasion_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": worship_service.errors[:occasion_id].none?, "border-red-400 focus:outline-red-600": worship_service.errors[:occasion_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
